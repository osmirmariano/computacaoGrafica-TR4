//---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop

#include "trabalho4.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm3 *Form3;
//---------------------------------------------------------------------------
__fastcall TForm3::TForm3(TComponent* Owner)
	: TForm(Owner)
{
	opcao = 0;
	Form3->Color = clGray;
}
//---------------------------------------------------------------------------
void __fastcall TForm3::Button5Click(TObject *Sender)
{
	Image1->Picture->LoadFromFile("C:\\praia.jpg"); // Carregando imagem
	Image1->Stretch = true; //redimensiona
	Image1->Refresh(); //atualiza
}
//---------------------------------------------------------------------------


void __fastcall TForm3::Button1Click(TObject *Sender)
{
	opcao = 1;
}
//---------------------------------------------------------------------------

void __fastcall TForm3::Button4Click(TObject *Sender)
{
	opcao = 2;
}
//---------------------------------------------------------------------------

void __fastcall TForm3::Button3Click(TObject *Sender)
{
	opcao = 3;
}
//---------------------------------------------------------------------------

void __fastcall TForm3::Button2Click(TObject *Sender)
{
	opcao = 4;
}
//---------------------------------------------------------------------------


void __fastcall TForm3::Image1MouseDown(TObject *Sender, TMouseButton Button, TShiftState Shift,
          int X, int Y)
{
	switch(opcao){
		case 1:
			ShowMessage("ROTAÇÃO");
			break;
		case 2:
			ShowMessage("REFLEXÃO");
			break;
		case 3:
			ShowMessage("ESCALA");
			break;
		case 4:
			ShowMessage("TRANSLAÇÃO");
			break;
	}
}
//---------------------------------------------------------------------------

